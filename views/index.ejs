<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>YoutubeToMP3Converter</title>
</head>

<body>
    <div class="top-container">
        <form action="/convert" method="POST" id="form">
            <h1><i class="fa-brands fa-youtube"></i>Youtube to MP3 Converter</h1>
            <h4>Enter the video ID to get started</h4>
            <div>
                <input type="text" name="videoID" placeholder="VideoID"><button id="convert-btn">Convert</button>
            </div>
        </form>
    </div>

    <div class="bottom-container">
        <% if(typeof success != "undefined" && success) {%>
            <div class="success">
                <p><%= title %></p>
                <a href="<%= link %>"><button id="download-btn">DOWNLOAD</button></a>
            </div>
        <% } else if(typeof success != "undefined" && !success) { %>
            <div class="errors">
                <p><%= message %></p>
            </div>
        <% } %>
    </div>
</body>

</html>